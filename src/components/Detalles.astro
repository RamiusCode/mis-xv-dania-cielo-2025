---
// =============================================================================
// DetallesEvento.astro - Sección de Detalles del Evento (Hora, Dirección, Vestimenta)
// =============================================================================
import Itinerario from '../components/Itinerario.astro';
---

<section 
  class="relative w-full min-h-screen flex items-center justify-center pt-16 px-4 overflow-hidden"
  aria-label="Detalles del evento"
  id="detalles-evento-section"
>
  
  <!-- ========================================
    IMAGEN DE FONDO FIJA - SIEMPRE VISIBLE
  ======================================== -->
  <div class="invitacion-bg fixed inset-0" style="z-index: -10;">
    <img 
      src="/imagenes/fondo2.webp"
      alt="Fondo elegante de invitación"
      class="w-full h-full object-cover" 
      loading="lazy"
    />
    <div class="absolute inset-0 bg-black/10"></div>
  </div>

  <!-- ========================================
    CONTENIDO PRINCIPAL
  ======================================== -->
  <div class="invitacion-content relative z-10 max-w-2xl mx-auto text-center opacity-0" style="transform: translateY(30px);">

    <!-- ========================================
      1. HORA
    ======================================== -->
    <div class="mb-12">
      <h3 class="font-great-vibes text-3xl md:text-4xl text-[#7B1E3A] mb-6 font-bold">
        Recepción Social
      </h3>
      
      <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <div class="bg-white/30 rounded-full backdrop-blur-sm p-3">
          <img 
            src="/imagenes/reloj.png"
            alt="Icono de reloj"
            class="w-12 h-12 md:w-16 md:h-16"
            loading="lazy"
          />
        </div>
        <div class="text-center md:text-left">
          <p class="font-charm text-xl md:text-2xl text-gray-800 mb-1">
            Desde las
          </p>
          <p class="font-charm text-3xl md:text-4xl text-[#7B1E3A]">
            17:00 horas
          </p>
        </div>
      </div>
    </div>

    <!-- ========================================
      2. DIRECCIÓN
    ======================================== -->
    <div class="mb-12">
      <h3 class="font-great-vibes text-3xl md:text-4xl text-[#7B1E3A] mb-6 font-bold">
        Dirección
      </h3>
      
      <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <div class="bg-white/30 rounded-full backdrop-blur-sm p-3">
          <img 
            src="/imagenes/direccion.png"
            alt="Icono de ubicación"
            class="w-12 h-12 md:w-16 md:h-16"
            loading="lazy"
          />
        </div>
        <div class="flex-1 text-center md:text-left">
          <p class="font-charm text-lg md:text-xl text-gray-800 mb-4 max-w-md mx-auto md:mx-0">
            Avenida Circunvalación y Francisco Quevedo (zona norte)
          </p>
          <a 
            href="https://maps.app.goo.gl/TU_ENLACE"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-[#7B1E3A] hover:bg-[#5a162b] text-white font-charm text-base md:text-lg py-2 px-6 rounded-full transition-colors duration-300"
          >
            Ver Ubicación
          </a>
        </div>
      </div>
    </div>

    <!-- ========================================
      3. CÓDIGO DE VESTIMENTA
    ======================================== -->
    <div>
      <h3 class="font-great-vibes text-3xl md:text-4xl text-[#7B1E3A] mb-6 font-bold">
        Código de Vestimenta
      </h3>
      
      <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <div class="bg-white/30 p-4 rounded-full backdrop-blur-sm">
          <img 
            src="/imagenes/Vestimenta.png"
            alt="Icono de vestimenta"
            class="w-12 h-12 md:w-16 md:h-16"
            loading="lazy"
          />
        </div>
        <div class="text-center md:text-left max-w-lg">
          <p class="font-charm text-3xl md:text-4xl text-[#7B1E3A] mb-3">
            Formal
          </p>
          <p class="font-charm text-base md:text-lg text-gray-800 italic bg-white/40 p-3 rounded-lg border-l-4 border-[#7B1E3A]">
            Los colores rojo y dorado están reservados exclusivamente para la quinceañera.
          </p>
        </div>
      </div>
    </div>
    <Itinerario/>
    
  </div>
</section>

<style>
  .invitacion-content h2,
  .invitacion-content h3 {
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.5);
  }

  /* Ajustes para dispositivos móviles */
  @media (max-width: 640px) {
    .invitacion-content {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>

<!-- =============================================================================
  ANIMACIÓN SIMPLE DEL CONTENIDO
============================================================================= -->
<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // =========================================================
    // ANIMACIÓN DEL CONTENIDO (solo aparece suavemente)
    // =========================================================
    gsap.to('.invitacion-content', {
      y: 0,
      opacity: 1,
      duration: 1.2,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: '.invitacion-content',
        start: 'top 75%',
        toggleActions: 'play none none none'
      }
    });
  });
</script>