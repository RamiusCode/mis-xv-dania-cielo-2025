---
// Itinerario.astro - Versión que SÍ aparece
---
<section class="pt-8 lg:py-16 px-4 relative overflow-hidden">
  <div class="max-w-4xl mx-auto relative z-10">
    <div class="max-w-3xl mx-auto relative">
      <div class="text-center mb-6">
        <h2 class="font-charm text-xl md:text-2xl lg:text-2xl text-[#7B1E3A] font-bold mb-3">
          Itinerario
        </h2>
        <div class="flex items-center justify-center gap-2">
          <div class="w-12 h-[1.5px] bg-gradient-to-r from-transparent to-[#C8A75A]"></div>
          <div class="w-1.5 h-1.5 rounded-full bg-[#C8A75A]"></div>
          <div class="w-12 h-[1.5px] bg-gradient-to-l from-transparent to-[#C8A75A]"></div>
        </div>
      </div>

      <div class="relative px-3 md:px-6">
        <div class="absolute left-1/2 -translate-x-1/2 top-0 bottom-0 w-[2.5px] bg-gradient-to-b from-[#C8A75A] via-[#d4c087] to-[#C8A75A] rounded-full shadow-sm"></div>

        <div class="space-y-0.5">
          <!-- Evento 1 -->
          <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
          <div class="evento-item grid grid-cols-2 gap-4 md:gap-6 py-1">
            <div class="flex flex-col items-center justify-center px-2 md:px-4">
              <div class="w-12 h-12 md:w-14 md:h-14">
                <div class="w-full h-full bg-[#C8A75A] mask-[url('/imagenes/recepcion.png')] mask-contain mask-center drop-shadow-sm"></div>
              </div>
            </div>
            <div class="flex flex-col items-center justify-center px-2 md:px-4 text-center">
              <p class="font-charm text-lg md:text-base text-[#C8A75A] font-bold leading-tight">Recepción de invitados</p>
              <p class="font-charm text-xs text-[#7B1E3A] mt-0.5">17:00 Hrs</p>
            </div>
          </div>

          <!-- Repite los otros 4 eventos igual (sin opacity-0) -->

          <!-- Evento 2 -->
          <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
          <div class="evento-item grid grid-cols-2 gap-4 md:gap-6 py-1">
            <div class="flex flex-col items-center justify-center px-2 md:px-4 text-center">
              <p class="font-charm text-lg md:text-base text-[#C8A75A] font-bold leading-tight">Acto principal</p>
              <p class="font-charm text-xs text-[#7B1E3A] mt-0.5">18:00 Hrs</p>
            </div>
            <div class="flex flex-col items-center justify-center px-2 md:px-4">
              <div class="w-12 h-12 md:w-14 md:h-14">
                <div class="w-full h-full bg-[#C8A75A] mask-[url('/imagenes/acto.png')] mask-contain mask-center drop-shadow-sm"></div>
              </div>
            </div>
          </div>

          <!-- Evento 3 -->
          <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
          <div class="evento-item grid grid-cols-2 gap-4 md:gap-6 py-1">
            <div class="flex flex-col items-center justify-center px-2 md:px-4">
              <div class="w-12 h-12 md:w-14 md:h-14">
                <div class="w-full h-full bg-[#C8A75A] mask-[url('/imagenes/cena.png')] mask-contain mask-center drop-shadow-sm"></div>
              </div>
            </div>
            <div class="flex flex-col items-center justify-center px-2 md:px-4 text-center">
              <p class="font-charm text-lg md:text-base text-[#C8A75A] font-bold leading-tight">Cena</p>
              <p class="font-charm text-xs text-[#7B1E3A] mt-0.5">19:00 Hrs</p>
            </div>
          </div>

          <!-- Evento 4 -->
          <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
          <div class="evento-item grid grid-cols-2 gap-4 md:gap-6 py-1">
            <div class="flex flex-col items-center justify-center px-2 md:px-4 text-center">
              <p class="font-charm text-lg md:text-base text-[#C8A75A] font-bold leading-tight">Hora loca</p>
              <p class="font-charm text-xs text-[#7B1E3A] mt-0.5">20:30 Hrs</p>
            </div>
            <div class="flex flex-col items-center justify-center px-2 md:px-4">
              <div class="w-12 h-12 md:w-14 md:h-14">
                <div class="w-full h-full bg-[#C8A75A] mask-[url('/imagenes/hora.png')] mask-contain mask-center drop-shadow-sm"></div>
              </div>
            </div>
          </div>

          <!-- Evento 5 -->
          <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
          <div class="evento-item grid grid-cols-2 gap-4 md:gap-6 py-1">
            <div class="flex flex-col items-center justify-center px-2 md:px-4">
              <div class="w-12 h-12 md:w-14 md:h-14">
                <div class="w-full h-full bg-[#C8A75A] mask-[url('/imagenes/torta.png')] mask-contain mask-center drop-shadow-sm"></div>
              </div>
            </div>
            <div class="flex flex-col items-center justify-center px-2 md:px-4 text-center">
              <p class="font-charm text-lg md:text-base text-[#C8A75A] font-bold leading-tight">Torta</p>
              <p class="font-charm text-xs text-[#7B1E3A] mt-0.5">22:30 Hrs</p>
            </div>
            
            
          
          </div>

           <div class="flex justify-center py-1">
            <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#C8A75A] to-[#b89850] flex items-center justify-center relative z-10 shadow-md">
              <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .font-charm {
    font-family: 'Charm', cursive;
  }
</style>